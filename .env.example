# Hermes SDK Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Core Configuration
# =============================================================================

# Your Polymarket wallet private key (required for trading)
# Generate a new wallet for trading - never use your main wallet
POLYMARKET_PRIVATE_KEY=0x...

# Polygon RPC URL (optional - defaults to public RPC)
# For production, use a dedicated RPC provider like Alchemy or Infura
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# =============================================================================
# Crypto15ML Strategy Configuration
# =============================================================================

# Enable/disable the Crypto15ML strategy
# Set to 'true' to enable, 'false' to disable
CRYPTO15ML_ENABLED=false

# Dry-run mode (paper trading)
# Set to 'true' for paper trading (no real trades), 'false' for live trading
# IMPORTANT: Start with dry-run mode to validate signals before going live
CRYPTO15ML_DRY_RUN=true

# Model file paths (relative to project root)
# These files are exported from Argus ML training
CRYPTO15ML_MODEL_PATH=./models/crypto15ml_model.json
CRYPTO15ML_IMPUTATION_PATH=./models/crypto15ml_imputations.json

# Position size in USD per trade
# Recommended: Start with $10-50 for testing
CRYPTO15ML_POSITION_SIZE=100

# Signal thresholds
# YES signal generated when probability >= YES_THRESHOLD
# NO signal generated when probability <= NO_THRESHOLD
CRYPTO15ML_YES_THRESHOLD=0.70
CRYPTO15ML_NO_THRESHOLD=0.30

# Maximum entry price (0-1)
# Trades with entry price above this are rejected
CRYPTO15ML_ENTRY_PRICE_CAP=0.70

# Enable debug logging
# Set to 'true' for verbose logging during development
CRYPTO15ML_DEBUG=false

# =============================================================================
# Railway Deployment (Optional)
# =============================================================================

# These are automatically set by Railway
# NODE_ENV=production
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=hermes
